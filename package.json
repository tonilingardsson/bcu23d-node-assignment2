{
  "name": "Final Individual NODE JS assignment for BCU23D at MedieInstitutet",
  "version": "1.0.0",
  "description": "This is the final NODE JS assignment where we have to create a complete Blockchain application for my own cryptocurrency with transaction management and validation, using MongoDB and Pubnub. For the client side I will use React.",
  "main": "server.mjs",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "start": "node --env-file=config/config.env server.mjs",
    "dev": "nodemon --env-file=config/config.env server.mjs 5000 http://localhost:5000",
    "dev-node": "cross-env GENERATE_NODE_PORT='true' nodemon server.mjs",
    "node1": "nodemon --env-file=config/config.env server.mjs 5001 http://localhost:5001",
    "node2": "nodemon --env-file=config/config.env server.mjs 5002 http://localhost:5002",
    "node3": "nodemon --env-file=config/config.env server.mjs 5003 http://localhost:5003"
  },
  "keywords": [
    "Blockchain",
    "node.js",
    "application",
    "mongodb",
    "pubnub",
    "react",
    "reactjs",
    "vitest",
    "TDD"
  ],
  "author": "Antonio Ling√•rdsson Luna",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "hex-to-binary": "^1.0.1",
    "pubnub": "^8.2.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitest/ui": "^1.6.0",
    "cross-env": "7.0.3",
    "nodemon": "^3.1.0",
    "vitest": "^1.6.0"
  }
}